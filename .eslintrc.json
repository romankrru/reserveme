{
	"parser": "babel-eslint",
	"extends": ["airbnb", "plugin:flowtype/recommended", "prettier"],

	"plugins": [
		"flowtype"
	],

	"env": {
		"browser": true,
		"node": true
	},

	"rules": {
		"no-console": "off",
		"comma-dangle": "off",
		"react/jsx-filename-extension": "off",
		"react/destructuring-assignment": "never",
		"react/jsx-indent-props": [4, "tab"],
		"react/jsx-indent": [4, "tab"],
		"sort-keys": ["error", "asc", {"caseSensitive": true, "natural": false}],
		"react/jsx-one-expression-per-line": "none"
	}
}
